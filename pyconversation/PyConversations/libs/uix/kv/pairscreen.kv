#: kivy 1.9.1
#: import MDFlatButton kivymd.uix.button.MDFlatButton

# Стартовое Activity приложения.

<Pair>:
    name: 'pair'

    BoxLayout:
        id: box_avatar
        orientation: 'vertical'

        canvas:
            Color:
                rgba: [255/255, 235/255, 204/255, 1]
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        id: box_avatar
        orientation: 'vertical'

        GridLayout:
            id: grid_buttons
            cols: 5
            rows: 1
            padding: dp(10), dp(10), dp(10), dp(10)
            size_hint: 1, 0.06
            row_force_default: True
            row_default_height: self.height
            background_color: [255, 255, 255, 0]

            canvas:
                Color:
                    rgba: 1, 1, 1, 0
                Rectangle:
                    pos: self.pos
                    size: self.size


            Button:
                id: button_color
                bold: True
                text: 'Colored'
                on_release: app.twins.change_color(True, True)
                background_normal: ''
                background_color: [54 / 255, 48 / 255, 115 / 255, 1]
                color: [1, 1, 1, 1]

            Button:
                id: button_bw
                bold: True
                text: 'Black & White'
                on_release: app.twins.change_color(False, True)
                background_normal: ''
                background_color: [255 / 255, 235 / 255, 204 / 255, 1]
                color: [0, 0, 0, 1]

        Label:
            id: label
            bold: True
            color: 0, 0, 0, 1
            text: ''
            size_hint_y: None
            height: root.height * 0.2

        GridLayout:
            id: grid
            cols: 5
            rows: 5
            padding: dp(10), dp(10), dp(10), dp(10)

            canvas:
                Color:
                    rgba: [255,255,255,1]

            Button:
                id: button_1
                bold: True
                size_hint_y: None
                height: self.width
                font_size: self.height * 0.7
                on_press: root.say_hello(button_1.text, 'button_1')
                on_release: app.twins.handle_result(root.result)
                background_normal: ''
                background_color: [255 / 255, 235 / 255, 204 / 255, 1]

