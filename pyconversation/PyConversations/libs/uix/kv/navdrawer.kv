# -*- coding: utf-8 -*-

#:import os os
#:import SingleIconItem libs.uix.lists.SingleIconItem


<LabelSection@Label>:
    markup: True
    bold: True
    font_size: '16sp'
    color: 0, 0, 0, 1
    size_hint_y: None
    height: dp(45)


<NavDrawer>:
    orientation: 'vertical'

    BoxLayout:
        id: box_avatar
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        size_hint_y: .3

        canvas:
            Color:
                rgba: [255,255,255,1]
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            id: navigation_image
            size_hint: None, None
            size: dp((box_avatar.height * 40) // 100), dp((box_avatar.height * 40) // 100)
            source: 'data/images/brain.png'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Widget:

        Label:
            id: user_name
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            text: '[b]%s[/b]\n[size=12]1.0[/size]\n' % app.title
            markup: True
            font_size: '14sp'
            color: [0, 0, 0, 1]

    ScrollView:
        id: scroll
        size_hint_y: .5

        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
