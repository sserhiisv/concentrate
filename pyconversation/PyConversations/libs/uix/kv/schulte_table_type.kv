# -*- coding: utf-8 -*-
##: kivy 1.9.1
##: import MDFlatButton kivymd.uix.button.MDFlatButton

<SchulteTableType>:
    name: 'schulte_table_type'

    BoxLayout:
        id: box_avatar
        orientation: 'vertical'
        padding: dp(50), root.height * 0.3, dp(50), dp(10)

        canvas:
            Color:
                rgba: [255/255, 235/255, 204/255, 1]
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            id: x
            cols: 1
            orientation: 'vertical'

            Label:
                id: label
                bold: True
                color: 0, 0, 0, 1
                text: 'Schulte Table'
                font_size: self.height * 0.2
                size_hint_y: None
                height: root.height * 0.2

            Button:
                text: app.translation._('Numbers')
                on_release: app.run_schulte_table('numbers')
                size: root.width, root.width * 0.15
                size_hint_y: None
                background_normal: ''
                background_color: [54 / 255, 48 / 255, 115 / 255, 1]
                color: 1,1,1,1

            Button:
                size: root.width, 15
                size_hint_y: None
                background_normal: ''
                background_color: [255 / 255, 235 / 255, 204 / 255, 1]

            Button:
                text: app.translation._('Letters')
                on_release: app.run_schulte_table('letters')
                size: root.width, root.width * 0.15
                size_hint_y: None
                background_normal: ''
                background_color: [54 / 255, 48 / 255, 115 / 255, 1]
                color: 1,1,1,1
